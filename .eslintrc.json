{
  "env": {
    "browser": true,
    "webextensions": true,
    "es2021": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "node/no-callback-literal": ["off"],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "space-before-function-paren": ["error", "never"]
  }
}
